import TelegramBot from 'node-telegram-bot-api';
import fs from 'fs';
import axios from 'axios';

// ==========================================
// 1. KONFIGURASI UTAMA
// ==========================================
const config = {
    // ‚ö†Ô∏è GANTI DENGAN TOKEN BARU DARI BOTFATHER!
    token: "ISI_TOKEN_BOT_KAMU_DISINI", 
    ownerId: 6197482164, 
    botUsername: "FANTUNNEL_PPOB_BOT", 
    adminGroupId: -1002076809846, 
    
    // Database Files
    userBalanceFile: "./database/user_balance.json", 
    historyFile: "./database/history.json",
    xlSessionsFile: "./database/xl_sessions.json",
    scheduleFile: "./database/schedule.json", 
    
    // API Keys (Pastikan Valid)
    apiKeyKMSP: "29dc3989-2394-448d-a7a5-8a6c3fa59f5d", 
    apiKeyPayment: "e435777e-47ed-4485-a06c-767dbe895d1f", 
    
    // Harga & Markup
    markupMember: 3000,    
    markupReseller: 1000,
    priceUpgradeReseller: 50000, // Harga Upgrade
    bonusReferralUpgrade: 5000   // Bonus ke pengundang
};

const bot = new TelegramBot(config.token, { polling: true });
const botStartTime = Date.now();

// ==========================================
// 2. DATABASE & UTILS
// ==========================================
if (!fs.existsSync('./database')) fs.mkdirSync('./database');

const loadDB = (file, defaultVal) => {
    try {
        if (!fs.existsSync(file)) {
            fs.writeFileSync(file, JSON.stringify(defaultVal, null, 2));
            return defaultVal;
        }
        return JSON.parse(fs.readFileSync(file));
    } catch (e) { return defaultVal; }
};

const saveDB = (file, data) => fs.writeFileSync(file, JSON.stringify(data, null, 2));

// Load Database Saat Start
let userBalance = loadDB(config.userBalanceFile, {}); 
let historyTrx = loadDB(config.historyFile, []);
let xlSessions = loadDB(config.xlSessionsFile, {});
let scheduleData = loadDB(config.scheduleFile, []);

const userState = {}; 
const tempOrder = {}; 

const formatRupiah = (n) => new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(n);

const getUserData = (userId, referrerId = null) => {
    if (!userBalance[userId]) {
        userBalance[userId] = { 
            balance: 0, 
            role: 'member', // Default Role
            referredBy: (referrerId && referrerId != userId) ? String(referrerId) : null 
        };
        saveDB(config.userBalanceFile, userBalance);
    }
    return userBalance[userId];
};

const getRuntime = () => {
    const uptime = Date.now() - botStartTime;
    const m = Math.floor((uptime / (1000 * 60)) % 60);
    const h = Math.floor((uptime / (1000 * 60 * 60)) % 24);
    const d = Math.floor(uptime / (1000 * 60 * 60 * 24));
    return `${d}d ${h}h ${m}m`;
};

// ==========================================
// 3. SYSTEM BACKUP & BROADCAST
// ==========================================
const runBackup = async (targetId) => {
    try {
        const totalUsers = Object.keys(userBalance).length;
        const totalSaldo = Object.values(userBalance).reduce((a, b) => a + (b.balance || 0), 0);
        
        const report = `üìä *LAPORAN BACKUP*\nUser: ${totalUsers}\nSaldo User: ${formatRupiah(totalSaldo)}\nWaktu: ${new Date().toLocaleString()}`;
        await bot.sendMessage(targetId, report, { parse_mode: 'Markdown' });

        const files = fs.readdirSync('./database');
        for (const file of files) {
            if (file.endsWith('.json')) {
                await bot.sendDocument(targetId, `./database/${file}`, { caption: `üíæ ${file}` }).catch(()=>{});
            }
        }
    } catch (e) { console.error('Backup Error:', e); }
};

// Auto Backup jam 00:00
setInterval(() => {
    const now = new Date();
    if (now.getHours() === 0 && now.getMinutes() === 0) {
        runBackup(config.ownerId);
        runBackup(config.adminGroupId);
    }
}, 60000);

// ==========================================
// 4. MESIN OTOMATIS (SCHEDULE & TRX)
// ==========================================
const processTransaction = async (userId, chatId, order, isScheduled = false) => {
    const userData = getUserData(userId);
    
    if (userData.balance < order.price_sell) {
        if (!isScheduled) bot.sendMessage(chatId, `‚ùå Saldo Kurang! Butuh: ${formatRupiah(order.price_sell)}`);
        return false;
    }

    // Kurangi Saldo
    userData.balance -= order.price_sell;
    const trxId = `FTN${Date.now().toString().slice(-6)}`;
    
    historyTrx.push({ 
        trxId, userId, product: order.name, price: order.price_sell, 
        status: 'SUKSES', type: isScheduled ? 'SCHEDULED' : 'INSTANT',
        date: new Date().toLocaleString('id-ID') 
    });
    
    saveDB(config.userBalanceFile, userBalance);
    saveDB(config.historyFile, historyTrx);

    const struk = `‚îè‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îì\n‚îÉ      üé´ *STRUK PEMBAYARAN* üé´      ‚îÉ\n‚îó‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îõ\n*ID TRX* : #${trxId}\n*Status* : ‚úÖ *BERHASIL* ${isScheduled ? '(Otomatis)' : ''}\n‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n*Produk* : ${order.name}\n*Tujuan* : \`${order.phone}\`\n*Harga* : ${formatRupiah(order.price_sell)}\n‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n_Sisa Saldo: ${formatRupiah(userData.balance)}_`;

    bot.sendMessage(chatId, struk, { parse_mode: 'Markdown' });
    return true;
};

// Cek Jadwal Tiap Menit
setInterval(async () => {
    if (scheduleData.length === 0) return;
    const now = new Date();
    let updated = false;

    for (let i = 0; i < scheduleData.length; i++) {
        const task = scheduleData[i];
        if (now >= new Date(task.executeAt)) {
            await processTransaction(task.userId, task.chatId, task.orderData, true);
            scheduleData.splice(i, 1);
            updated = true;
            i--;
        }
    }
    if (updated) saveDB(config.scheduleFile, scheduleData);
}, 60000);

// ==========================================
// 5. CALLBACK HANDLER (MENU UTAMA)
// ==========================================
bot.on('callback_query', async (clb) => {
    const { id, data, from, message } = clb;
    const chatId = message.chat.id;
    const userData = getUserData(from.id);

    // --- MENU: TOPUP ---
    if (data === 'menu_topup') {
        userState[chatId] = 'WAITING_TOPUP_AMOUNT';
        bot.sendMessage(chatId, 'üí∞ *ISI SALDO QRIS*\nMasukkan nominal (Min: Rp 1.000):', { parse_mode: 'Markdown' });
    }

    // --- MENU: LOGIN XL ---
    else if (data === 'menu_xl_login') {
        userState[chatId] = 'WAITING_XL_PHONE';
        bot.sendMessage(chatId, 'üîê *LOGIN XL*\nMasukkan Nomor XL (Contoh: 0878xxx):');
    }

    // --- MENU: CEK KUOTA ---
    else if (data === 'menu_cekkouta') {
        const session = xlSessions[from.id];
        if (!session) return bot.answerCallbackQuery(id, { text: "Anda belum Login XL!", show_alert: true });
        
        bot.sendMessage(chatId, `üìä *INFO KUOTA XL*\nNomor: ${session.phone}\n\n‚ö†Ô∏è _Fitur cek kuota membutuhkan API khusus._`, { parse_mode: 'Markdown' });
    }

    // --- MENU: UPGRADE RESELLER ---
    else if (data === 'menu_reseller') {
        if (userData.role === 'reseller') return bot.answerCallbackQuery(id, { text: "Anda sudah Reseller!", show_alert: true });
        
        const text = `üëë *UPGRADE RESELLER*\n\nKeuntungan:\n‚úÖ Harga lebih murah (Potongan Rp 2.000)\n‚úÖ Prioritas Support\n\nBiaya Upgrade: *${formatRupiah(config.priceUpgradeReseller)}*`;
        bot.editMessageText(text, {
            chat_id: chatId, message_id: message.message_id, parse_mode: 'Markdown',
            reply_markup: { inline_keyboard: [[{ text: 'üöÄ BAYAR & UPGRADE', callback_data: 'confirm_upgrade' }], [{ text: 'üîô BATAL', callback_data: 'back_to_menu' }]] }
        });
    }
    else if (data === 'confirm_upgrade') {
        if (userData.balance < config.priceUpgradeReseller) return bot.answerCallbackQuery(id, { text: "Saldo Kurang!", show_alert: true });
        
        userData.balance -= config.priceUpgradeReseller;
        userData.role = 'reseller';
        
        // Bonus Referral
        if (userData.referredBy && userBalance[userData.referredBy]) {
            userBalance[userData.referredBy].balance += config.bonusReferralUpgrade;
            bot.sendMessage(userData.referredBy, `üéâ Teman Anda upgrade Reseller! Bonus: ${formatRupiah(config.bonusReferralUpgrade)}`);
        }
        
        saveDB(config.userBalanceFile, userBalance);
        bot.sendMessage(chatId, 'üéâ *SELAMAT!* Akun Anda sekarang *RESELLER*.', { parse_mode: 'Markdown' });
    }

    // --- MENU: TRANSAKSI & JADWAL ---
    else if (data === 'pay_balance') {
        const order = tempOrder[chatId];
        if (!order) return bot.answerCallbackQuery(id, { text: "Sesi Habis!", show_alert: true });
        bot.deleteMessage(chatId, message.message_id);
        await processTransaction(from.id, chatId, order, false);
        delete tempOrder[chatId];
    }
    else if (data === 'set_schedule') {
        if (!tempOrder[chatId]) return bot.answerCallbackQuery(id, { text: "Sesi Habis!", show_alert: true });
        userState[chatId] = 'WAITING_SCHEDULE_TIME';
        bot.sendMessage(chatId, `üìÖ *ATUR JADWAL*\nFormat: \`YYYY-MM-DD HH:MM\`\nContoh: \`2026-02-12 08:30\``, { parse_mode: 'Markdown' });
    }

    // --- MENU: KATEGORI & PAGINATION (FIXED) ---
    else if (data === 'menu_list') {
        bot.editMessageText('üìÇ *PILIH KATEGORI PAKET*:', {
            chat_id: chatId, message_id: message.message_id, parse_mode: 'Markdown',
            reply_markup: {
                inline_keyboard: [
                    [{ text: 'üíé BEST SELLER', callback_data: 'cat_bestseller_0' }, { text: 'üë®‚Äçüë©‚Äçüëß‚Äçüë¶ AKRAB', callback_data: 'cat_akrab_0' }],
                    [{ text: '‚ö° COMBO', callback_data: 'cat_combo_0' }, { text: 'üî• HOTROD', callback_data: 'cat_hotrod_0' }],
                    [{ text: 'üåê SEMUA PAKET', callback_data: 'cat_all_0' }],
                    [{ text: 'üõí INPUT KODE', callback_data: 'menu_input_manual' }],
                    [{ text: 'üîô KEMBALI', callback_data: 'back_to_menu' }]
                ]
            }
        });
    }
    // LOGIKA PAGINATION YANG BENAR
    else if (data.startsWith('cat_')) {
        const [_, kategori, page] = data.split('_');
        const p = parseInt(page);
        
        try {
            const res = await axios.get(`https://golang-openapi-packagelist-xltembakservice.kmsp-store.com/v1?api_key=${config.apiKeyKMSP}`);
            let allPackages = res.data.data;
            let filtered = [];
            
            // Filter Logic
            if (kategori === 'bestseller') {
                filtered = allPackages.filter(item => 
                    item.package_name.toLowerCase().includes('edukasi') || 
                    item.package_name.toLowerCase().includes('conference')
                );
            } else if (kategori === 'akrab') {
                filtered = allPackages.filter(item => item.package_name.toLowerCase().includes('akrab'));
            } else if (kategori === 'combo') {
                filtered = allPackages.filter(item => item.package_name.toLowerCase().includes('combo') || item.package_name.toLowerCase().includes('vip'));
            } else if (kategori === 'hotrod') {
                filtered = allPackages.filter(item => item.package_name.toLowerCase().includes('hotrod'));
            } else {
                filtered = allPackages;
            }

            if (filtered.length === 0) return bot.answerCallbackQuery(id, { text: "‚ùå Kategori Kosong.", show_alert: true });

            const roleMarkup = userData.role === 'reseller' ? config.markupReseller : config.markupMember;
            
            let pText = `üì¶ *KATEGORI: ${kategori.toUpperCase()}*\n‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\n`;
            
            const itemsPerPage = 5;
            const paginatedItems = filtered.slice(p * itemsPerPage, (p + 1) * itemsPerPage);

            paginatedItems.forEach(item => {
                pText += `üîπ *${item.package_name}*\n`;
                pText += `‚îî üîë Kode: \`${item.package_code}\`\n`;
                pText += `‚îî üí∞ Harga: *${formatRupiah(item.package_harga_int + roleMarkup)}*\n\n`;
            });

            pText += `üìÑ Hal: ${p + 1} / ${Math.ceil(filtered.length / itemsPerPage)}`;
            
            const nav = [];
            if (p > 0) nav.push({ text: '‚¨ÖÔ∏è Prev', callback_data: `cat_${kategori}_${p - 1}` });
            if ((p + 1) * itemsPerPage < filtered.length) nav.push({ text: 'Next ‚û°Ô∏è', callback_data: `cat_${kategori}_${p + 1}` });
            
            const buttons = [];
            if (nav.length > 0) buttons.push(nav);
            buttons.push([{ text: 'üõí BELI (INPUT KODE)', callback_data: 'menu_input_manual' }]);
            buttons.push([{ text: 'üîô KEMBALI', callback_data: 'menu_list' }]);

            bot.editMessageText(pText, { 
                chat_id: chatId, message_id: message.message_id, parse_mode: 'Markdown', 
                reply_markup: { inline_keyboard: buttons } 
            });

        } catch (e) { console.error(e); bot.answerCallbackQuery(id, { text: "‚ùå Gagal memuat data." }); }
    }

    else if (data === 'menu_input_manual') {
        userState[chatId] = 'WAITING_BUY_CODE';
        bot.sendMessage(chatId, 'üõí Masukkan KODE PAKET (Contoh: pre295..):');
    }
    else if (data === 'back_to_menu') sendMainMenu(chatId, from.id, from.first_name, message.message_id);
    
    bot.answerCallbackQuery(id).catch(() => {});
});

// ==========================================
// 6. MESSAGE HANDLER (INPUT TEXT)
// ==========================================
bot.on('message', async (msg) => {
    const { chat, from, text } = msg;
    const chatId = chat.id;
    if (!text || chat.type !== 'private') return;

    const state = userState[chatId];

    // --- COMMANDS ---
    if (text.startsWith('/start')) {
        getUserData(from.id, text.split(' ')[1]); // Cek referral
        return sendMainMenu(chatId, from.id, from.first_name);
    }
    
    // Command Owner
    if (from.id === config.ownerId) {
        if (text === '/backup') {
            bot.sendMessage(chatId, "üîÑ *Backing up...*", { parse_mode: 'Markdown' });
            return runBackup(chatId);
        }
        if (text === '/stats') {
            const totalUsers = Object.keys(userBalance).length;
            const totalSaldo = Object.values(userBalance).reduce((a, b) => a + (b.balance || 0), 0);
            return bot.sendMessage(chatId, `üìà *STATS*\nUser: ${totalUsers}\nSaldo: ${formatRupiah(totalSaldo)}\nUptime: ${getRuntime()}`);
        }
        if (text.startsWith('/bc ')) {
            const message = text.replace('/bc ', '');
            const users = Object.keys(userBalance);
            bot.sendMessage(chatId, `üì¢ Mengirim broadcast ke ${users.length} user...`);
            users.forEach((uid, index) => {
                setTimeout(() => bot.sendMessage(uid, `üì¢ *PENGUMUMAN*\n\n${message}`, { parse_mode: 'Markdown' }).catch(()=>{}), index * 200);
            });
            return;
        }
    }

    // --- PROSES LOGIN XL ---
    if (state === 'WAITING_XL_PHONE') {
        let phone = text.replace(/[^0-9]/g, '');
        if (phone.startsWith('0')) phone = '62' + phone.slice(1);
        
        userState[chatId] = 'WAITING_XL_OTP';
        tempOrder[chatId] = { phone };
        
        bot.sendMessage(chatId, 'üîÑ Meminta OTP...');
        try {
            const res = await axios.get(`https://golang-openapi-reqotp-xltembakservice.kmsp-store.com/v1`, { params: { api_key: config.apiKeyKMSP, phone, method: 'OTP' } });
            if (res.data.status) {
                tempOrder[chatId].auth_id = res.data.data.auth_id;
                bot.sendMessage(chatId, '‚úÖ OTP Terkirim! Masukkan Kode OTP:');
            } else bot.sendMessage(chatId, '‚ùå Gagal kirim OTP.');
        } catch (e) { bot.sendMessage(chatId, '‚ùå Gangguan API.'); }
    }
    else if (state === 'WAITING_XL_OTP') {
        const d = tempOrder[chatId];
        bot.sendMessage(chatId, 'üîÑ Verifikasi OTP...');
        try {
            const res = await axios.get(`https://golang-openapi-login-xltembakservice.kmsp-store.com/v1`, { 
                params: { api_key: config.apiKeyKMSP, phone: d.phone, method: 'OTP', auth_id: d.auth_id, otp: text.trim() } 
            });
            if (res.data.status) {
                xlSessions[from.id] = { phone: d.phone, token: res.data.data.access_token };
                saveDB(config.xlSessionsFile, xlSessions);
                bot.sendMessage(chatId, '‚úÖ *LOGIN BERHASIL!*', { parse_mode: 'Markdown' });
            } else bot.sendMessage(chatId, '‚ùå OTP Salah.');
        } catch (e) { bot.sendMessage(chatId, '‚ùå Error Verifikasi.'); }
        delete userState[chatId];
    }

    // --- PROSES BUAT JADWAL ---
    else if (state === 'WAITING_SCHEDULE_TIME') {
        if (!/^\d{4}-\d{2}-\d{2} \d{2}:\d{2}$/.test(text)) return bot.sendMessage(chatId, '‚ùå Format Salah! Gunakan: `YYYY-MM-DD HH:MM`');
        
        const scheduledTime = new Date(text);
        if (scheduledTime <= new Date()) return bot.sendMessage(chatId, '‚ùå Waktu harus masa depan.');

        scheduleData.push({ userId: from.id, chatId, executeAt: scheduledTime.toISOString(), orderData: tempOrder[chatId] });
        saveDB(config.scheduleFile, scheduleData);
        
        bot.sendMessage(chatId, `‚úÖ *JADWAL TERSIMPAN*\nPaket akan dibeli otomatis pada: ${text}`, {parse_mode:'Markdown'});
        delete userState[chatId];
        delete tempOrder[chatId];
    }

    // --- PROSES BELI PAKET ---
    else if (state === 'WAITING_BUY_CODE') {
        tempOrder[chatId] = { package_code: text.trim().toUpperCase() };
        userState[chatId] = 'WAITING_BUY_PHONE';
        bot.sendMessage(chatId, `‚úÖ Kode OK. Masukkan *NOMOR TUJUAN*:`);
    }
    else if (state === 'WAITING_BUY_PHONE') {
        let phone = text.replace(/[^0-9]/g, '');
        if (phone.startsWith('0')) phone = '62' + phone.slice(1);
        
        const code = tempOrder[chatId]?.package_code;
        const loading = await bot.sendMessage(chatId, "üîç Cek Harga...");
        
        try {
            const res = await axios.get(`https://golang-openapi-packagelist-xltembakservice.kmsp-store.com/v1?api_key=${config.apiKeyKMSP}`);
            const p = res.data.data.find(x => x.package_code === code);
            
            if (!p) return bot.editMessageText("‚ùå Kode Invalid.", { chat_id: chatId, message_id: loading.message_id });

            const userData = getUserData(from.id);
            const roleMarkup = userData.role === 'reseller' ? config.markupReseller : config.markupMember;
            const finalPrice = p.package_harga_int + roleMarkup;

            tempOrder[chatId] = { phone, price_sell: finalPrice, name: p.package_name, code };

            const msg = `üì¶ *KONFIRMASI*\n${p.package_name}\nCode: ${code}\nTujuan: ${phone}\nüí∞ *${formatRupiah(finalPrice)}*`;
            bot.editMessageText(msg, {
                chat_id: chatId, message_id: loading.message_id, parse_mode: 'Markdown',
                reply_markup: { inline_keyboard: [
                    [{ text: 'üí∞ Bayar Saldo', callback_data: 'pay_balance' }, { text: 'üí≥ Isi Saldo', callback_data: 'menu_topup' }],
                    [{ text: '‚è∞ Buat Jadwal', callback_data: 'set_schedule' }],
                    [{ text: '‚ùå Batal', callback_data: 'back_to_menu' }]
                ]}
            });
            delete userState[chatId];
        } catch (e) { bot.sendMessage(chatId, "‚ùå Server Error."); }
    }

    // --- PROSES TOPUP ---
    else if (state === 'WAITING_TOPUP_AMOUNT') {
        const nominal = parseInt(text.replace(/[^0-9]/g, ''));
        delete userState[chatId];
        if (nominal < 1000) return bot.sendMessage(chatId, '‚ùå Min Rp 1.000.');
        
        const msg = await bot.sendMessage(chatId, 'üîÑ Generate QRIS...');
        try {
            const res = await axios.get(`https://my-payment.autsc.my.id/api/deposit`, { params: { amount: nominal, apikey: config.apiKeyPayment } });
            if (res.data.status === 'success') {
                bot.deleteMessage(chatId, msg.message_id);
                bot.sendPhoto(chatId, res.data.data.qris_url, { caption: `üí∞ *TAGIHAN TOPUP*\nJumlah: ${formatRupiah(res.data.data.total_amount)}\n\n_Saldo masuk otomatis._`, parse_mode: 'Markdown' });
            }
        } catch (e) { bot.sendMessage(chatId, '‚ùå Gagal.'); }
    }
});

// Helper Menu Utama
const sendMainMenu = (chatId, userId, name, messageId = null) => {
    const d = getUserData(userId);
    const msg = `ü§ñ *FANTUNNEL BOT*\nüë§ ${name} (${d.role.toUpperCase()})\nüí∞ ${formatRupiah(d.balance)}\n‚è≥ ${getRuntime()}`;
    const opts = {
        parse_mode: 'Markdown',
        reply_markup: { inline_keyboard: [
            [{ text: 'üõí BELI PAKET', callback_data: 'menu_list' }, { text: 'üí∞ ISI SALDO', callback_data: 'menu_topup' }],
            [{ text: 'üîê LOGIN XL', callback_data: 'menu_xl_login' }, { text: 'üìä CEK KUOTA', callback_data: 'menu_cekkouta' }],
            [{ text: 'üëë UPGRADE RESELLER', callback_data: 'menu_reseller' }],
        ]}
    };
    if (messageId) bot.editMessageText(msg, { chat_id: chatId, message_id: messageId, ...opts }).catch(()=>{});
    else bot.sendMessage(chatId, msg, opts);
};

console.log('Bot V4 (Full Feature) Active! üöÄ');
